<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertPin">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool_bar"
        android:layout_alignParentTop="true"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:background="#444"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <TextView
        android:layout_below="@id/tool_bar"
        android:id="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Create New Pin"
        android:textSize="26sp"
        android:textAppearance="?attr/textAppearanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/insert_name"
        android:layout_below="@+id/text"
        android:layout_marginTop="25dp"
        android:hint="Enter name e.g MPESA"
        android:textColorHint="#900"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
    <EditText
        android:id="@+id/insert_pin"
        android:layout_below="@id/insert_name"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:hint="Enter Pin"
        android:textColorHint="#900"
        android:layout_marginEnd="20dp"
        android:layout_height="70dp" />
    <Button
        android:id="@+id/submit"
        android:layout_below="@id/insert_pin"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Submit"
        style="@style/TextAppearance.MaterialComponents.Button"
        android:layout_width="130dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

</RelativeLayout>